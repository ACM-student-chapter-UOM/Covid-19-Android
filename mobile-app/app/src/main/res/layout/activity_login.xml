<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/innerConstraint1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="7"

        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/innerConstraint2">

        <LinearLayout
            android:id="@+id/appbar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/number"
            app:layout_constraintTop_toTopOf="@id/innerConstraint1">

            <ImageView
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:src="@drawable/logo_4" />

            <TextView
                android:id="@+id/title"
                android:layout_width="174dp"
                android:layout_height="match_parent"
                android:paddingVertical="6dp"
                android:text=" goSAFE"
                android:textAlignment="gravity"
                android:textColor="#fff"
                android:autoSizeTextType="uniform" />
        </LinearLayout>


        <EditText

            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:background="@drawable/transparent_round"
            android:hint="Enter your mobile number here"
            android:inputType="number"
            android:maxLength="10"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryDark"
            android:autoSizeTextType="uniform"
            app:layout_constraintBottom_toTopOf="@+id/tv3"
            app:layout_constraintTop_toBottomOf="@id/appbar"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:text="YOUR PHONE NUMBER WILL BE USED TO CONTACT YOU IF YOU WERE FOUND AROUND A PATIENT"
            android:textColor="@color/black"
            android:autoSizeTextType="uniform"
            app:layout_constraintTop_toBottomOf="@id/number"
            app:layout_constraintBottom_toTopOf="@+id/iv1"/>

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="5"
            android:layout_marginTop="0dp"
            android:src="@drawable/phone"
            app:layout_constraintTop_toBottomOf="@+id/tv3"
            app:layout_constraintBottom_toBottomOf="@+id/innerConstraint1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/innerConstraint2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintTop_toBottomOf="@+id/innerConstraint1"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintVertical_weight="3"
            android:layout_above="@+id/final_btn"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:text="WE HAVE SENT AN OTP NUMBER TO VERIFY YOUR MOBILE NUMBER. PRESS LOGIN TO ENTER THE OTP NUMBER"
            android:textColor="@color/colorAccent"
            android:autoSizeTextType="uniform"
            tools:layout_editor_absoluteX="10dp"
            app:layout_constraintTop_toTopOf="@id/innerConstraint2"
            app:layout_constraintBottom_toTopOf="@id/final_btn"
            />

        <Button
            android:id="@+id/final_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/round_button"
            android:onClick="OTPEnter"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/login_2_btn"
            android:autoSizeTextType="uniform"
            android:layout_alignParentBottom="true"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintBottom_toBottomOf="@id/innerConstraint2">
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>